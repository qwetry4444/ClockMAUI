<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Clock"
             x:DataType="controls:MainPage"
             x:Class="Clock.MainPage">

    <HorizontalStackLayout Spacing="24" HorizontalOptions="Center" VerticalOptions="Center">
        <controls:SevenSegmentNumber Number="{Binding HourTens}"/>
        <controls:SevenSegmentNumber Number="{Binding HourUnits}"/>
        <controls:SevenSegmentNumber Number="2"/>

        <VerticalStackLayout Spacing="24" HorizontalOptions="Center" VerticalOptions="Center">
            <BoxView WidthRequest="40" HeightRequest="40" Color="Green" CornerRadius="8"/>
            <BoxView WidthRequest="40" HeightRequest="40" Color="Green" CornerRadius="8"/>
        </VerticalStackLayout>

        <controls:SevenSegmentNumber Number="{Binding MinuteTens}"/>
        <controls:SevenSegmentNumber Number="{Binding MinuteUnits}"/>
    </HorizontalStackLayout>
</ContentPage>
