<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clock.SevenSegmentNumber">
    <Grid ColumnDefinitions="20, 80, 20" RowDefinitions="20, 80, 20, 80, 20">
        <BoxView x:Name="HorTop" Color="Green" WidthRequest="100" HeightRequest="20" CornerRadius="4" Grid.Column="1" Grid.Row="0" IsVisible="false"/>

        <BoxView x:Name="VerTopLeft" Color="Green" WidthRequest="20" HeightRequest="100" CornerRadius="4" Grid.Column="0" Grid.Row="1" IsVisible="false"/>
        <BoxView x:Name="VerTopRight" Color="Green" WidthRequest="20" HeightRequest="100" CornerRadius="4" Grid.Column="2" Grid.Row="1" IsVisible="false"/>

        <BoxView x:Name="HorMiddle" Color="Green" WidthRequest="100" HeightRequest="20" CornerRadius="4" Grid.Column="1" Grid.Row="2" IsVisible="false"/>

        <BoxView x:Name="VerBottomLeft" Color="Green" WidthRequest="20" HeightRequest="100" CornerRadius="4" Grid.Column="0" Grid.Row="3" IsVisible="false"/>
        <BoxView x:Name="VerBottomRight" Color="Green" WidthRequest="20" HeightRequest="100" CornerRadius="4" Grid.Column="2" Grid.Row="3" IsVisible="false"/>

        <BoxView x:Name="HorBottom" Color="Green" WidthRequest="100" HeightRequest="20" CornerRadius="4" Grid.Column="1" Grid.Row="4" IsVisible="false"/>
    </Grid>
</ContentView>

