<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:y="clr-namespace:Clock"
             x:Class="Clock.SevenSegmentNumber">
    <VerticalStackLayout HorizontalOptions="Center"
            Padding="30,0"
            Spacing="2">

        <BoxView Color="Green" WidthRequest="100" HeightRequest="20" CornerRadius="4" IsVisible="{Binding HorTop}"/>
        <HorizontalStackLayout Spacing="80">
            <BoxView Color="Green" WidthRequest="20" HeightRequest="100" CornerRadius="4" IsVisible="{Binding VerTopLeft}"/>
            <BoxView Color="Green" WidthRequest="20" HeightRequest="100" CornerRadius="4" IsVisible="{Binding VerTopRight}"/>
        </HorizontalStackLayout>
        <BoxView Color="Green" WidthRequest="100" HeightRequest="20" CornerRadius="4" IsVisible="{Binding HorMiddle}"/>
        <HorizontalStackLayout Spacing="80">
            <BoxView Color="Green" WidthRequest="20" HeightRequest="100" CornerRadius="4" IsVisible="{Binding VerBottomLeft}"/>
            <BoxView Color="Green" WidthRequest="20" HeightRequest="100" CornerRadius="4" IsVisible="{Binding VerBottomRight}"/>
        </HorizontalStackLayout>
        <BoxView Color="Green" WidthRequest="100" HeightRequest="20" CornerRadius="4" IsVisible="{Binding HorBottom}"/>
    </VerticalStackLayout>
</ContentView>

