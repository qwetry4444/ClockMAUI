<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:namespace="clr-namespace:Clock"
             x:DataType="namespace:SevenSegmentNumber"
             x:Class="Clock.SevenSegmentNumber">
    <Grid ColumnDefinitions="20, 80, 20" RowDefinitions="20, 80, 20, 80, 20">
        <BoxView Color="Green" WidthRequest="100" HeightRequest="20" CornerRadius="4" IsVisible="{Binding HorTop}" Grid.Column="1" Grid.Row="0"/>

        <BoxView Color="Green" WidthRequest="20" HeightRequest="100" CornerRadius="4" IsVisible="{Binding VerTopLeft}" Grid.Column="0" Grid.Row="1"/>
        <BoxView Color="Green" WidthRequest="20" HeightRequest="100" CornerRadius="4" IsVisible="{Binding VerTopRight}" Grid.Column="2" Grid.Row="1"/>

        <BoxView Color="Green" WidthRequest="100" HeightRequest="20" CornerRadius="4" IsVisible="{Binding HorMiddle}" Grid.Column="1" Grid.Row="2"/>

        <BoxView Color="Green" WidthRequest="20" HeightRequest="100" CornerRadius="4" IsVisible="{Binding VerBottomLeft}" Grid.Column="0" Grid.Row="3"/>
        <BoxView Color="Green" WidthRequest="20" HeightRequest="100" CornerRadius="4" IsVisible="{Binding VerBottomRight}" Grid.Column="2" Grid.Row="3"/>

        <BoxView Color="Green" WidthRequest="100" HeightRequest="20" CornerRadius="4" IsVisible="{Binding HorBottom}" Grid.Column="1" Grid.Row="4"/>
    </Grid>
</ContentView>

